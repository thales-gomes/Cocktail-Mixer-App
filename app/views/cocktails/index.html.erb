<div class="text-center"> 
<br>
  <h1>Cocktails</h1>
  <br>
<div class="row justify-content-center">
  <div class="col-auto">
      <table class="table table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @cocktails.each do |cocktail| %>
            <tr>
              <td><%= cocktail.name %></td>
              <td><%= link_to 'Show', cocktail %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
  <br>

  <%= link_to 'New Cocktail', new_cocktail_path %>
</div> 